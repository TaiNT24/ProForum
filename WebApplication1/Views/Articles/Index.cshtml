@model IEnumerable<WebApplication1.Models.Article>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="tt-topic-list">
    <div class="tt-list-header">
        <div class="tt-col-topic">Topic</div>
        <div class="tt-col-value hide-mobile">Likes</div>
        <div class="tt-col-value hide-mobile">Replies</div>
        <div class="tt-col-value hide-mobile">Views</div>
    </div>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArtTittle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArtContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArtPostTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArtAuthor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArtStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ViewCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LikeCount)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ArtID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ArtID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ArtID })
            </td>
        </tr>
    }

    <div class="tt-topic-alert tt-alert-default" role="alert">
        <a href="#" target="_blank">4 new posts</a> are added recently, click here to load them.
    </div>

    <div class="tt-item tt-itemselect">
        <div class="tt-col-description">
            <h6 class="tt-title">
                <a href="page-single-topic.html">
                    Halloween Costume Contest 2018
                </a>
            </h6>
            <div class="row align-items-center no-gutters">
                <div class="col-11">
                    <ul class="tt-list-badge">
                        <li><a href="#"><span class="tt-badge">Time</span></a></li>
                        <li><a href="#"><span class="tt-badge">authors</span></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="tt-col-value hide-mobile">like</div>
        <div class="tt-col-value tt-color-select hide-mobile">View</div>
        <div class="tt-col-value hide-mobile">Time</div>
    </div>

    <div class="tt-item">
        <div class="tt-col-description">
            <h6 class="tt-title">
                <a href="page-single-topic.html">
                    Review Queue Changes for VideoHive & PhotoDune
                </a>
            </h6>
            <div class="row align-items-center no-gutters">
                <div class="col-11">
                    <ul class="tt-list-badge">
                        <li><a href="#"><span class="tt-badge">videohive</span></a></li>
                        <li><a href="#"><span class="tt-badge">photodune</span></a></li>
                    </ul>
                </div>
                <div class="col-1 ml-auto show-mobile">
                    <div class="tt-value">1d</div>
                </div>
            </div>
        </div>
        <div class="tt-col-value  hide-mobile">308</div>
        <div class="tt-col-value tt-color-select  hide-mobile">660</div>
        <div class="tt-col-value  hide-mobile">8.3k</div>
    </div>

    <div class="tt-row-btn">
        <button type="button" class="btn-icon js-topiclist-showmore">
            <svg class="tt-icon">
                <use xlink:href="#icon-load_lore_icon"></use>
            </svg>
        </button>
    </div>
</div>


